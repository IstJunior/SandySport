body 
    background-color #f6f6f6
    margin 0px
.box
    background-color #fff
    border 1px solid #d6d6d6
    border-radius 8px 
    position absolute
    width: 450px
    .btn-success
        width 100%
        background-color #be31ff
        
    .form-control
    &:focus, &:active
        outline: none !important
        box-shadow: none !important

    .header
        border-radius 8px 8px 0px 0px
        background-color #be31ff
        a 
            img 
                width 50%
                margin 0px auto
                display block
                padding 16px
    .footer
        text-align center
        a 
            display inline-block
            font-size .8em
            &:last-child
                margin-left 24px
.inside
    padding 16px
.mtop16
    margin-top 16px

.box_login
    left calc(50% - 250px)
    top calc(50% - 190px)

.box_register
    left calc(50% - 250px)
    top calc(50% - 360px)
    
